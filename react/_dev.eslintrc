{
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "react",
    "mocha"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": false
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": false
  },
  "globals": {
    "expect": true
  },
  "rules": {
    /* airbnb javascript style guide rules */
    "strict": [1, "never"],
    // es6
    "no-var": 0,
    // variables
    "no-shadow": 1,
    "no-shadow-restricted-names": 1,
    "no-unused-vars": [1, {
      "vars": "all",
      "args": "none"
    }],
    "no-use-before-define": [1, "nofunc"],
    // possible errors
    "comma-dangle": 0,
    "no-cond-assign": [1, "always"],
    "no-debugger": 0,
    "no-alert": 1,
    "no-constant-condition": 1,
    "no-dupe-keys": 1,
    "no-duplicate-case": 1,
    "no-empty": 1,
    "no-ex-assign": 1,
    "no-extra-boolean-cast": 0,
    "no-extra-semi": 1,
    "no-func-assign": 1,
    "no-inner-declarations": 1,
    "no-invalid-regexp": 1,
    "no-irregular-whitespace": 1,
    "no-obj-calls": 1,
    "no-reserved-keys": 1,
    "no-sparse-arrays": 1,
    "no-unreachable": 1,
    "use-isnan": 1,
    // best practices
    "consistent-return": 1,
    "curly": [1, "multi-line"],
    "default-case": 1,
    "dot-notation": [1, {
      "allowKeywords": true
    }],
    "eqeqeq": 1,
    "guard-for-in": 1,
    "no-caller": 1,
    "no-eq-null": 1,
    "no-eval": 1,
    "no-extend-native": 1,
    "no-extra-bind": 1,
    "no-fallthrough": 1,
    "no-floating-decimal": 1,
    "no-implied-eval": 1,
    "no-lone-blocks": 1,
    "no-loop-func": 1,
    "no-multi-str": 1,
    "no-native-reassign": 1,
    "no-new": 1,
    "no-new-func": 1,
    "no-new-wrappers": 1,
    "no-octal": 1,
    "no-octal-escape": 1,
    "no-param-reassign": 1,
    "no-proto": 1,
    "no-redeclare": 1,
    "no-return-assign": 1,
    "no-script-url": 1,
    "no-self-compare": 1,
    "no-sequences": 1,
    "no-throw-literal": 1,
    "no-with": 1,
    "radix": 1,
    "vars-on-top": 0,
    "wrap-iife": [1, "any"],
    "yoda": 1,
    // style
    "indent": [1, 2],
    "brace-style": [1,
      "1tbs", {
        "allowSingleLine": true
      }],
      "quotes": [
        1, "single", "avoid-escape"
      ],
      "camelcase": [1, {
        "properties": "never"
      }],
      "comma-spacing": [1, {
        "before": false,
        "after": true
      }],
      "comma-style": [1, "last"],
      "eol-last": 1,
      "key-spacing": [1, {
        "beforeColon": false,
        "afterColon": true
      }],
      "no-multiple-empty-lines": [1, {
        "max": 1
      }],
      "no-nested-ternary": 1,
      "no-new-object": 1,
      "no-spaced-func": 1,
      "no-trailing-spaces": 1,
      "no-wrap-func": 1,
      "no-underscore-dangle": 0,
      "one-var": [1, "never"],
      "padded-blocks": [1, "never"],
      "semi-spacing": [1, {
        "before": false,
        "after": true
      }],
      "space-after-keywords": 1,
      "space-before-blocks": 1,
      "space-infix-ops": 1,
      "space-return-throw-case": 1,
      "spaced-line-comment": 1,

    /* custom rules */
    "no-console": 0,
    "space-before-function-paren": [1, {
      "named": "never",
      "anonymous": "never"
    }],
    "func-names": 0,
    "consistent-this": [1, "this"],
    "func-style": [0, "expression"],
    "max-nested-callbacks": [1, 3],
    "new-parens": 1,
    "no-array-constructor": 1,
    "no-else-return": 0,
    "no-inline-comments": 1,
    "no-lonely-if": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-multiple-empty-lines": [1, {
      "max": 1
    }],
    "operator-assignment": 0,
    "quote-props": [1, "as-needed"],
    "sort-vars": [0, {
      "ignoreCase": true
    }],
    "space-in-parens": [1, "never"],
    "space-unary-ops": [1,
      {
        "words": true,
        "nonwords": false
      }
    ],
    "wrap-regex": 1,

    // react
    "react/display-name": 0,
    "react/jsx-boolean-value": 1,
    "react/jsx-quotes": 1,
    "react/jsx-no-undef": 1,
    "react/jsx-sort-props": 0,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": 1,
    "react/no-unknown-property": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "react/wrap-multilines": 1,

    // babel
    "block-scoped-var": 0,
    "babel/block-scoped-var": 1,
    "object-shorthand": 0,
    "babel/object-shorthand": 0,
    "generator-star": 0,
    "babel/generator-star": [1, "end"],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
    "new-cap": 0,
    "babel/new-cap": [1, {
      "newIsCap": true
    }],
    "space-in-brackets": 0,
    "babel/space-in-brackets": [1, "never", {
      "arraysInArrays": false,
      "arraysInObjects": false,
      "singleValue": false,
      "objectsInArrays": false,
      "objectsInObjects": false,
      "propertyName": false
    }],

    // mocha
    "mocha/no-exclusive-tests": 1,
    "mocha/handle-done-callback": 1
  }
}
